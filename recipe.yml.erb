resources:
  - type: command
    script: brew update
  <%- homebrew_packages.each do |package| -%>
  - type: homebrew_package
    name: <%= package %>
  <%- end -%>
  <%- homebrew_packages_with_option.each do |package_and_option| -%>
  - type: homebrew_package
    name: <%= package_and_option[:name] %>
    option: <%= package_and_option[:option] %>
  <%- end -%>
  - type: rbenv_ruby
    version: 2.3.1
    global: true
  - type: command
    script: echo "/usr/local/bin/zsh" | sudo tee -a /etc/shells
  - type: command
    check_script: "finger -l | grep -E '/bin/zsh$'"
    script: sudo chsh -s /usr/local/bin/zsh <%= ENV["USER"] %>
